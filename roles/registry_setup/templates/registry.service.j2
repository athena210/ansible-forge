[Unit]
Description=Docker compose app
After=network-online.target docker.service
Requires=docker.service
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ registry_setup__workdir }}
ExecStart=/usr/bin/docker compose up -d ; docker image prune -af
ExecStop=/usr/bin/docker compose down
Restart=on-failure
TimeoutStartSec=0
RestartSec=10s

[Install]
WantedBy=multi-user.target
