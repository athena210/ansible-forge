- name: smtp

{% if prometheus__smtp_alerts is defined and prometheus__smtp_alerts.host_port is defined %}
  email_configs:
    - smarthost: '{{ prometheus__smtp_alerts.host_port }}'
      hello: '{{ prometheus__smtp_alerts.hello }}'
      to: '{{ prometheus__smtp_alerts.to }}'
      from: '{{ prometheus__smtp_alerts.from }}'
      auth_username: '{{ prometheus__smtp_alerts.user }}'
      auth_password: '{{ prometheus__smtp_alerts.password }}'
      send_resolved: true
      require_tls: false
{% endif %}
